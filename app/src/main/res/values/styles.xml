<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="RadioButtonStyle" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@drawable/rb_home_textcolor_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MyCustomTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabMaxWidth">60dp</item>
        <item name="tabMinWidth">60dp</item>
        <item name="tabIndicatorColor">#ff0000</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabSelectedTextColor">@android:color/holo_red_light</item>
        <item name="tabTextAppearance">@style/MyCustomTabAppearance</item>
    </style>

    <style name="MyCustomTabAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="textAllCaps">false</item>

    </style>
</resources>
